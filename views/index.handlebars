<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4" id="app-title">Awesome Burger <img src=""></h1>
        <p class="lead">Welcome to Awesome Burger. Home of the Awesome Burger.</p>
    </div>
</div>

<div class="container">
    <h1>Eat-Da-Burger</h1>

    <div class="row mt-4">
        <div class="col-md-6 mt-4">
            <div class="card border border-danger">
                <div class="card-header bg-danger text-white">
                    <h2>Burger options:</h2>

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{>burgers/burger-block devour=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-4">
            <div class="card border border-danger">
                <div class="card-header bg-danger text-white">
                    <h2>Burgers gone!</h2>

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{>burgers/burger-block devour=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6 mt-4">
            <div class="card border border-danger">
                <div class="card-header bg-danger text-white">
                    <h2>Enter a burger you'd like to devour and click Order button</h2>
                    <form class="create-form">

                        <div class="form-group">
                            <label for="burg">Burger </label>
                            <input type="text" id="burg" name="burger_name">
                        </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Full!<br>
        <input type="radio" name="devoured" value="0">Let's eat!
    </div>

    <button class="btn btn-primary btn-lg" type="submit">Order</button>
    </form>
</div>
<div class="footer">
    <p>Footer</p>
</div>